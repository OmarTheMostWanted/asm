{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-nostartfiles",
                "-o",
                "${workspaceFolder}/build/hello",
                "${workspaceFolder}/src/hello64.s"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "${workspaceFolder}/build/hello",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "Build"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "${workspaceFolder}/build/hello"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            }
        }
    ]
}